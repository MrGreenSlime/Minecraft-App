<Window x:Class="PresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="219" Width="343">
    <Grid>
        <ComboBox HorizontalAlignment="Center" Name="worldSelection" Height="33" VerticalAlignment="Center" Width="154" SelectionChanged="worldSelection_SelectionChanged"/>
        <Label Content="Select world" HorizontalAlignment="Left" Height="39" Margin="95,41,0,0" VerticalAlignment="Top" Width="109"/>
        <Button Content="Start" Name="startButton" HorizontalAlignment="Center" Height="39" Margin="0,132,0,0" VerticalAlignment="Top" Width="154" Click="startButton_Click"/>
        <Button Content="↻" Name="Reload" HorizontalAlignment="Left" Height="28" Margin="302,10,0,0" VerticalAlignment="Top" Width="31" Click="Reload_Click"/>
    </Grid>
</Window>
