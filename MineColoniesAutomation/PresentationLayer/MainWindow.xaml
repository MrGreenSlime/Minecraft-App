<Window x:Class="PresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="652" Width="800">
    <Grid>
        <ListBox HorizontalAlignment="Left" Name="builderTasks" Height="316" Margin="24,91,0,0" VerticalAlignment="Top" Width="367" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="builderTasks_SelectionChanged" GotFocus="builderTasks_GotFocus"/>
        <ListBox HorizontalAlignment="Left" Name="regularTasks" Height="316" Margin="411,91,0,0" VerticalAlignment="Top" Width="367" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="regularTasks_SelectionChanged" GotFocus="regularTasks_GotFocus"/>
        <Label Content="builder tasks" HorizontalAlignment="Left" Height="34" Margin="24,52,0,0" VerticalAlignment="Top" Width="123"/>
        <Label Content="regular tasks" HorizontalAlignment="Left" Height="34" Margin="411,52,0,0" VerticalAlignment="Top" Width="123"/>
        <ListBox HorizontalAlignment="Center" Name="itemsOfRequest" Height="142" Margin="0,464,0,0" VerticalAlignment="Top" Width="754" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Label Content="items" Name="itemLabel" HorizontalAlignment="Left" Height="34" Margin="23,425,0,0" VerticalAlignment="Top" Width="164"/>
        <ComboBox HorizontalAlignment="Left" Name="colonySelection" Height="33" Margin="24,14,0,0" VerticalAlignment="Top" Width="154" SelectionChanged="colonySelection_SelectionChanged"/>

    </Grid>
</Window>
